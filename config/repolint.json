{
    "$schema": "https://raw.githubusercontent.com/todogroup/repolinter/master/rulesets/schema.json",
    "version": 2,
    "axioms": {
        "linguist": "language"
    },
    "rules": {
        "codeowners-file-exists": {
            "level": "warning",
            "rule": {
                "type": "file-existence",
                "options": {
                    "globsAny": [
                        "CODEOWNERS*",
                        "*/CODEOWNERS*",
                        ".github/CODEOWNERS*"
                    ],
                    "nocase": true
                },
                "where": [
                    "language=terraform",
                    "language=golang"
                ]
            },
            "fix": {
                "type": "file-create",
                "options": {
                    "file": "CODEOWNERS",
                    "text": {
                        "url": "https://docs.github.com/en/repositories/managing-your-repositorys-settings-and-features/customizing-your-repository/about-code-owners"
                    }
                }
            },
            "policyInfo": "GitHub requires a CODEOWNERS file in all projects. This enables GitHub to contact the maintainers in the event it is necessary.",
            "policyUrl": "https://github.com/github/open-source/blob/main/policies/release.md"
        },
        "binaries-not-present": {
            "level": "error",
            "rule": {
                "type": "file-type-exclusion",
                "options": {
                    "type": [
                        "!node_modules/**"
                    ]
                },
                "where": [
                    "language=terraform",
                    "language=golang"
                ]
            }
        }
    },
    "formatOptions": {
        "disclaimer": "ðŸ¤–*This issue was automatically generated by [repolinter-action](https://github.com/newrelic/repolinter-action), developed by the Open Source and Developer Advocacy team at New Relic.*"
    }
}